{
	"compilerOptions": {
		"target": "ES2021",
		"module": "ESNext",
		"lib": ["DOM", "ES2021"],
		"jsx": "react-jsx",
		"moduleResolution": "Node",
		"baseUrl": "./",
		"paths": {
			"@/*": ["src/renderer/*"]
		},
		"outDir": "dist",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*", "vite.config.ts"],
	"exclude": ["node_modules"]
}
