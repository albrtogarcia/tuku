{
	"name": "tuku",
	"version": "0.1.5",
	"description": "Reproductor de m√∫sica local construido con Electron y React",
	"main": "dist/main/index.js",
	"author": {
		"name": "albrtogarcia",
		"email": "malgardel@gmail.com"
	},
	"license": "MIT",
	"scripts": {
		"dev": "concurrently -k \"vite\" \"npm:dev:main\" \"npm:dev:electron\"",
		"dev:main": "tsc -p tsconfig.main.json --watch",
		"dev:electron": "wait-on tcp:5173 && wait-on file:dist/main/index.js && electron .",
		"build": "npm run build:renderer && npm run build:main && electron-builder --config electron-builder.config.js --mac",
		"build:renderer": "vite build",
		"build:main": "tsc -p tsconfig.main.json",
		"build:mac": "npm run build:renderer && npm run build:main && electron-builder --config electron-builder.config.js --mac",
		"build:mac-unsigned": "npm run build:renderer && npm run build:main && CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --config electron-builder.config.js --mac",
		"build:win": "npm run build:renderer && npm run build:main && electron-builder --config electron-builder.config.js --win",
		"build:linux": "npm run build:renderer && npm run build:main && electron-builder --config electron-builder.config.js --linux",
		"release": "release-it",
		"lint": "eslint . --ext .ts,.tsx",
		"type-check": "tsc --noEmit",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"test:run": "vitest run",
		"postinstall": "electron-builder install-app-deps"
	},
	"dependencies": {
		"@dnd-kit/core": "^6.3.1",
		"@dnd-kit/sortable": "^10.0.0",
		"@dnd-kit/utilities": "^3.2.2",
		"@phosphor-icons/react": "^2.1.7",
		"better-sqlite3": "^11.9.1",
		"howler": "^2.2.4",
		"music-metadata": "^11.2.0",
		"react": "^19.2.1",
		"react-dom": "^19.2.1",
		"react-virtuoso": "^4.17.0",
		"sass": "^1.86.3",
		"zustand": "^5.0.3"
	},
	"devDependencies": {
		"@testing-library/dom": "^10.4.0",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/better-sqlite3": "^7.6.13",
		"@types/node": "^22.14.1",
		"@types/react": "^19.1.2",
		"@types/react-dom": "^19.1.2",
		"@vitejs/plugin-react": "^4.3.4",
		"@vitest/ui": "^3.2.4",
		"concurrently": "^9.1.2",
		"electron": "^35.1.5",
		"electron-builder": "^26.0.12",
		"electron-react-devtools": "^0.5.3",
		"eslint": "^9.24.0",
		"jsdom": "^26.1.0",
		"prettier": "^3.5.3",
		"typescript": "^5.8.3",
		"vite": "^6.2.6",
		"vitest": "^3.2.4",
		"wait-on": "^8.0.3"
	},
	"packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
