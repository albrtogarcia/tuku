{
	"name": "tuku",
	"version": "0.1.0",
	"description": "Reproductor de m√∫sica local construido con Electron y React",
	"main": "dist/main/index.js",
	"author": "albrtogarcia",
	"license": "MIT",
	"scripts": {
		"dev": "concurrently -k \"vite\" \"npm:dev:main\" \"npm:dev:electron\"",
		"dev:main": "tsc -p tsconfig.main.json --watch",
		"dev:electron": "wait-on tcp:5173 && wait-on file:dist/main/index.js && electron .",
		"build": "electron-builder --config electron-builder.config.js",
		"lint": "eslint . --ext .ts,.tsx",
		"type-check": "tsc --noEmit"
	},
	"dependencies": {
		"electron": "^28.0.0",
		"howler": "^2.2.4",
		"music-metadata": "^10.7.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	},
	"devDependencies": {
		"@types/node": "^20.0.0",
		"@types/react": "^19.1.2",
		"@types/react-dom": "^19.1.2",
		"@vitejs/plugin-react": "^4.0.0",
		"concurrently": "^8.0.0",
		"electron-builder": "^24.5.0",
		"eslint": "^8.0.0",
		"prettier": "^2.8.0",
		"typescript": "^5.0.0",
		"vite": "^5.0.0",
		"wait-on": "^7.0.1"
	}
}
