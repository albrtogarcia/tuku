{
	"name": "tuku",
	"version": "0.1.0",
	"description": "Reproductor de m√∫sica local construido con Electron y React",
	"main": "dist/main/index.js",
	"author": "albrtogarcia",
	"license": "MIT",
	"scripts": {
		"dev": "concurrently -k \"vite\" \"npm:dev:main\" \"npm:dev:electron\"",
		"dev:main": "tsc -p tsconfig.main.json --watch",
		"dev:electron": "wait-on tcp:5173 && wait-on file:dist/main/index.js && electron .",
		"build": "electron-builder --config electron-builder.config.js",
		"lint": "eslint . --ext .ts,.tsx",
		"type-check": "tsc --noEmit"
	},
	"dependencies": {
		"electron": "^35.1.5",
		"howler": "^2.2.4",
		"music-metadata": "^11.2.0",
		"react": "^19.1.0",
		"react-dom": "^19.1.0"
	},
	"devDependencies": {
		"@types/node": "^22.14.1",
		"@types/react": "^19.1.2",
		"@types/react-dom": "^19.1.2",
		"@vitejs/plugin-react": "^4.3.4",
		"concurrently": "^9.1.2",
		"electron-builder": "^26.0.12",
		"eslint": "^9.24.0",
		"prettier": "^3.5.3",
		"typescript": "^5.8.3",
		"vite": "^6.2.6",
		"wait-on": "^8.0.3"
	}
}
